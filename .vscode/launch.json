    "version": "0.2.0",
    "compounds": [
        {
            "name": "RunAll",
            "configurations": ["Client Web","Inventory API"]
        }
    ],
    "configurations": [
        {
            "name": "Client Web",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/src/client",
        },{
            "name": "Inventory API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/services/inventory/",
        }
    ]
}